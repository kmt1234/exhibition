<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="customerServiceSQL">
 	
 <!-- 공지사항 총글수 -->
    <select id="getTotalC_notice" resultType="int">
       select count(*) from C_notice
    </select>
    
    <!-- 공지사항 리스트 -->
    <select id="getNoticeList" parameterType="java.util.Map" resultType="customerService">
       select * from 
       (select rownum rn, tt.* from 
       (select * from C_notice order by seq desc)tt) 
       where rn between #{startNum} and #{endNum}
    </select>
    
    <!-- 공지사항 -->
    <insert id="C_notice_Write" parameterType="java.util.Map">
       insert into C_notice values(seq_C_notice.nextval
                            ,#{subject}
                            ,#{content}
                            ,sysdate)
    </insert>
    
    <!-- 공지사항 내용보기 -->
    <select id="getNoticeInfo" parameterType="String" resultType="customerService">
       select * from C_notice where seq=#{seq} 
    </select>
    
    <!-- 공지사항 삭제 -->
    <delete id="C_notice_Delete" parameterType="String">
       delete C_notice where seq=#{seq}
    </delete>
    
    <!-- 공지사항 수정 -->
    <update id="C_notice_Modify" parameterType="java.util.Map">
       update C_notice set subject=#{subject} , content =#{content} where seq=#{seq}
    </update>
    
    <!-- 문의하기 -->
    <insert id="C_checkInquire" parameterType="customerService">
       insert into C_inquire values(seq_C_inquire.nextval
                                  ,#{email}
                                  ,#{classify}
                                  ,#{name}
                                  ,#{phone}
                                  ,#{subject}
                                  ,#{content}
                                  ,sysdate)
    </insert>
    
    <select id="getInquireInfo" parameterType="String" resultType="customerService">
       select * from C_inquire where seq=#{seq}
    </select>
    
    <select id="getInquireList" resultType="customerService">
       select * from C_inquire
    </select>
    
    <select id="getReplyInfo" parameterType="String" resultType="customerService">
       select * from C_inquire where seq=#{seq}
    </select>
    
    <!-- 자주묻는 질문 -->
    <insert id="C_QnA_checkWrite" parameterType="java.util.Map">
       insert into C_QnA values(seq_C_QnA.nextval
                            ,#{classify}
                            ,#{subject}
                            ,#{content})
    </insert>
    
    <!-- 자주묻는 질문 리스트 -->
    <select id="getQnAList" resultType="customerService">
       select * from C_QnA
    </select>
    
    <!-- 자주묻는 질문 분류에 맞는 리스트 불러오기 -->
    <select id="getQnA_Classify" parameterType="String" resultType="customerService">
       select * from C_QnA where classify=#{classify}
    </select>
    
    <!-- 주요시설 연락처 -->
    <insert id="C_contactList_checkWrite" parameterType="java.util.Map">
       insert into C_contactList values(seq_C_contactList.nextval
                            ,#{classify}
                            ,#{facility}
                            ,#{title}
                            ,#{name}
                            ,#{phone})
    </insert>
    <!-- ????? -->
    <select id="getContactList" resultType="customerService">
       select * from C_contactList
    </select>
 	
 	<!-- 이미지작성  -->
	<insert id="imageboardWrite" parameterType="imageboard">
		insert into customerImageboard values(seq_customerImageboard.nextval
											,#{postSelect}
											,#{imageName}
											,#{image1}
											,#{startDate}
											,#{endDate}
											,#{eventLink})
	</insert>
	<!-- 총글수 -->
	<select id="getImageboardTotalA" resultType="int">
		select count(*) from customerImageboard
	</select>
	
	<!-- 이미지목록 -->
	<select id="imageboardList" parameterType="java.util.Map" resultType="imageboard">
		select * from(
		select rownum rn, tt.* from(
		select * from customerImageboard order by seq desc)tt
		)where rn <![CDATA[ >= ]]> #{startNum} and rn<![CDATA[<=]]> #{endNum}
	</select>
	
	<!-- 이미지삭제  -->
	<delete id="imageboardDelete" parameterType="java.util.List">
		delete customerImageboard where seq in
		<foreach collection="list" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</delete>
	
	<select id="getList" parameterType="java.util.List" resultType="imageboard">
		select * from customerImageboard where seq in
		<foreach collection="list" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</select>
	
	<!--박람회 정보 넣기-->
	<insert id="eventInfoWrite" parameterType="eventboard">
		insert into eventboard values(seq_eventboard.nextval
						  			  ,#{postSelect}
									  ,#{imageName}
									  ,#{image1}
									  ,#{startDate}
									  ,#{endDate}
									  ,#{eventLink}
									  ,#{startTime}
									  ,#{endTime}
									  ,#{eventPlace}
									  ,#{eventPrice}
									  ,#{eventSeats}
									  ,#{eventRate}
									  ,#{eventContent})
	</insert>
	
	<!--연극 정보 넣기-->
	<insert id="eventInfoWrite_play" parameterType="eventboard">
		insert into eventboard_play values(seq_eventboard_play.nextval
						  			  ,#{postSelect}
									  ,#{imageName}
									  ,#{image1}
									  ,#{startDate}
									  ,#{endDate}
									  ,#{eventLink}
									  ,#{startTime}
									  ,#{endTime}
									  ,#{eventPlace}
									  ,#{eventPrice}
									  ,#{eventSeats}
									  ,#{eventRate}
									  ,#{eventContent})
	</insert>

	
	<!--메인 슬라이드 용 이미지 불러오기-->
	<select id="getImageboardSlide" resultType="imageboard">
		select * from customerImageboard order by seq desc
	</select>
	
	<!--박람회 업로드 리스트 가져오기  -->
	<select id="eventboardList" parameterType="java.util.Map" resultType="eventboard">
		select * from(
		select rownum rn, tt.* from(
		select * from eventboard order by seq desc)tt
		)where rn <![CDATA[ >= ]]> #{startNum} and rn<![CDATA[<=]]> #{endNum}
	</select>
	
	<!--연극 업로드 리스트 가져오기  -->
	<select id="eventboardList_play" parameterType="java.util.Map" resultType="eventboard">
		select * from(
		select rownum rn, tt.* from(
		select * from eventboard_play order by seq desc)tt
		)where rn <![CDATA[ >= ]]> #{startNum} and rn<![CDATA[<=]]> #{endNum} and postSelect =2
	</select>
	
	<!--박람회 업로드 리스트 총 글수 가져오기 -->
	<select id="getEventboardTotalA" resultType="int">
	select count(*) from eventboard where postSelect = 1
	</select>
	
	<!--연극 업로드 리스트 총 글수 가져오기 -->
	<select id="getEventboardTotalA_play" resultType="int">
		select count(*) from eventboard_play where postSelect = 2
	</select>
	
	<!-- 박람회  업로드 리스트 삭제   -->
	<delete id="eventboardDelete" parameterType="java.util.List">
		delete eventboard where seq in
		<foreach collection="list" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</delete>
	
	<!-- 연극  업로드 리스트 삭제   -->
	<delete id="eventboardDelete_play" parameterType="java.util.List">
		delete eventboard_play where seq in
		<foreach collection="list" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</delete>
	
	
	<!-- 호텔정보 넣기 -->
	<insert id="hotelInfoWrite" parameterType="hotelboard">
		insert into hotel_list values(seq_hotel_list.nextval
						  			  ,#{postSelect}
									  ,#{imageName}
									  ,#{image1}
									  ,#{eventLink}
									  ,#{eventPlace})
	</insert>
	
	<!-- 호텔리스트 -->
	<select id="hotelList" resultType="hotelboard">
		select * from hotel_list
	</select>
	
	<!-- 호텔  업로드 리스트 삭제   -->
	<delete id="hotelDelete" parameterType="java.util.List">
		delete hotel_list where seq in
		<foreach collection="list" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</delete>
	
	<!-- 호텔이미지 삭제리스트 불러오기 -->
	<select id="hotelImageDel" parameterType="java.util.List" resultType="hotelboard">
		select * from hotel_list where seq in
		<foreach collection="list" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</select>
 </mapper>
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 